# Locksmitha .env example

# CRITICAL: This secret must be identical across all services that use Locksmitha
# for authentication. If they don't match, authentication will fail.
KEYLIN_JWT_SECRET=supersecretjwtkey

# Database connection string (Postgres recommended for production)
# For development/testing, you can use SQLite:
# KEYLIN_DATABASE_URL=sqlite+aiosqlite:///./test.db
KEYLIN_DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/keylindb

# Password reset secret (required if password reset is enabled)
KEYLIN_RESET_PASSWORD_SECRET=supersecretresetkey

# Email verification secret (required if email verification is enabled)
KEYLIN_VERIFICATION_SECRET=supersecretverifykey

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# Optional: URL where Locksmitha is running (used by clients/services)
# LOCKSMITHA_URL=http://localhost:8001

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO
